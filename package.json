{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "NodeTS Backend Boilerplate",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/public/*.* dist/",
    "build": "npm run clean && npx tsc && npm run copy-files",
    "start": "node dist/app.js",
    "build:start": "npm run build && npm run start",
    "dev": "concurrently \"npx tsc -w\"  \"nodemon dist/index.js\"",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FaisalJamilOfficial/nodets-boilerplate.git"
  },
  "keywords": [],
  "author": "FaisalJamilOfficial",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FaisalJamilOfficial/nodets-boilerplate/issues"
  },
  "homepage": "https://github.com/FaisalJamilOfficial/nodets-boilerplate#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mime-types": "^2.1.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "rimraf": "^5.0.1",
    "typescript": "*"
  }
}
