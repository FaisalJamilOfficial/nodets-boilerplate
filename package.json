{
  "name": "nodets-boilerplate",
  "version": "1.2.3",
  "description": "NodeTS Backend Boilerplate",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/public/*.* dist/",
    "build": "npm run clean && npx tsc && npm run copy-files",
    "start": "node dist/app.js",
    "build:start": "npm run build && npm run start",
    "dev": "concurrently \"npx tsc -w\"  \"node --watch dist/app.js\"",
    "generate": "node ./src/generator/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FaisalJamilOfficial/nodets-boilerplate.git"
  },
  "keywords": [],
  "author": "FaisalJamilOfficial",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FaisalJamilOfficial/nodets-boilerplate/issues"
  },
  "homepage": "https://github.com/FaisalJamilOfficial/nodets-boilerplate#readme",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mime-types": "^3.0.1",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/otp-generator": "^4.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "5.9.3"
  }
}
